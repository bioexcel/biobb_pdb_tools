{
    "_id": "biobb_pdb_tools",
    "desc": "Biobb PDB Tools is a swiss army knife for manipulating and editing PDB files.",
    "github": "https://github.com/bioexcel/biobb_pdb_tools",
    "readthedocs": "https://biobb-pdb-tools.readthedocs.io/en/latest/",
    "conda": "",
    "docker": "",
    "singularity": "",
    "version": "3.9.0",
    "tools" : [
        {
            "block" : "Pdbchain", 
            "tool" : "pdb_chain", 
            "desc" : "Modifies the chain identifier column of a PDB file.",
            "exec" : "biobb_pdb_chain",
            "docs": "https://biobb-pdb-tools.readthedocs.io/en/latest/pdb_tools.html#module-pdb_tools.biobb_pdb_chain"
        },
        {
            "block" : "Pdbchainxseg", 
            "tool" : "pdb_chainxseg", 
            "desc" : "Swaps the segment identifier for the chain identifier.",
            "exec" : "biobb_pdb_chainxseg",
            "docs": "https://biobb-pdb-tools.readthedocs.io/en/latest/pdb_tools.html#module-pdb_tools.biobb_pdb_chainxseg"
        },
        {
            "block" : "Pdbdelhetatm", 
            "tool" : "pdb_delhetatm", 
            "desc" : "Removes all HETATM records in the PDB file.",
            "exec" : "biobb_pdb_delhetatm",
            "docs": "https://biobb-pdb-tools.readthedocs.io/en/latest/pdb_tools.html#module-pdb_tools.biobb_pdb_delhetatm"
        },
        {
            "block" : "Pdbfetch", 
            "tool" : "pdb_fetch", 
            "desc" : "Downloads a structure in PDB format from the RCSB website.",
            "exec" : "biobb_pdb_fetch",
            "docs": "https://biobb-pdb-tools.readthedocs.io/en/latest/pdb_tools.html#module-pdb_tools.biobb_pdb_fetch"
        },
        {
            "block" : "Pdbmerge", 
            "tool" : "pdb_merge", 
            "desc" : "Merges several PDB files into one.",
            "exec" : "biobb_pdb_merge",
            "docs": "https://biobb-pdb-tools.readthedocs.io/en/latest/pdb_tools.html#module-pdb_tools.biobb_pdb_merge"
        },
        {
            "block" : "Pdbmkensemble", 
            "tool" : "pdb_mkensemble", 
            "desc" : "Merges several PDB files into one multi-model (ensemble) file.",
            "exec" : "biobb_pdb_mkensemble",
            "docs": "https://biobb-pdb-tools.readthedocs.io/en/latest/pdb_tools.html#pdb-tools-biobb-pdb-mkensemble-module"
        },
        {
            "block" : "Pdbreres", 
            "tool" : "pdb_reres", 
            "desc" : "Renumbers the residues of the PDB file starting from a given number (default 1).",
            "exec" : "biobb_pdb_reres",
            "docs": "https://biobb-pdb-tools.readthedocs.io/en/latest/pdb_tools.html#module-pdb_tools.biobb_pdb_reres"
        },
        {
            "block" : "Pdbseg", 
            "tool" : "pdb_seg", 
            "desc" : "Modifies the segment identifier column of a PDB file.",
            "exec" : "biobb_pdb_seg",
            "docs": "https://biobb-pdb-tools.readthedocs.io/en/latest/pdb_tools.html#module-pdb_tools.biobb_pdb_seg"
        },
        {
            "block" : "Pdbsplitmodel", 
            "tool" : "pdb_splitmodel", 
            "desc" : "Splits a PDB file into several, each containing one MODEL.",
            "exec" : "biobb_pdb_splitmodel",
            "docs": "https://biobb-pdb-tools.readthedocs.io/en/latest/pdb_tools.html#pdb-tools-biobb-pdb-splitmodel-module"
        },
        {
            "block" : "Pdbsplitseg", 
            "tool" : "pdb_splitseg", 
            "desc" : "Splits a PDB file into several, each containing one segment.",
            "exec" : "biobb_pdb_splitseg",
            "docs": "https://biobb-pdb-tools.readthedocs.io/en/latest/pdb_tools.html#pdb-tools-biobb-pdb-splitseg-module"
        },
        {
            "block" : "Pdbtidy", 
            "tool" : "pdb_tidy", 
            "desc" : "Modifies the file to adhere (as much as possible) to the format specifications.",
            "exec" : "biobb_pdb_tidy",
            "docs": "https://biobb-pdb-tools.readthedocs.io/en/latest/pdb_tools.html#module-pdb_tools.biobb_pdb_tidy"
        },
        {
            "block" : "Pdbtofasta", 
            "tool" : "pdb_tofasta", 
            "desc" : "Extracts the residue sequence in a PDB file to FASTA format.",
            "exec" : "biobb_pdb_tofasta",
            "docs": "https://biobb-pdb-tools.readthedocs.io/en/latest/pdb_tools.html#pdb-tools-biobb-pdb-tofasta-module"
        }
    ],
    "dep_pypi" : [
        "install_requires=['biobb_common==4.1.0', 'pdb-tools==2.5.0']", 
        "python_requires='>=3.8'"
    ], 
    "dep_conda" : [
        "python >=3.8", 
        "biobb_common ==4.1.0"
    ],
    "keywords" : [
        "pdb",
        "chain",
        "model"
    ]
}