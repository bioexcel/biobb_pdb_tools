{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://bioexcel.eu/biobb_pdb_tools/json_schemas/1.0/biobb_pdb_fetch",
    "name": "biobb_pdb_tools Pdbfetch",
    "title": "Downloads a structure in PDB format from the RCSB website.",
    "description": null,
    "type": "object",
    "info": {
        "wrapped_software": {
            "name": "pdb_tools",
            "version": ">=2.5.0",
            "license": "Apache-2.0"
        },
        "ontology": {
            "name": "EDAM",
            "schema": "http://edamontology.org/EDAM.owl"
        }
    },
    "required": [
        "output_file_path"
    ],
    "properties": {
        "output_file_path": {
            "type": "string",
            "description": "Description for the output file path",
            "filetype": "output",
            "sample": "https://urlto.sample",
            "enum": [
                ".*\\.pdb$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.pdb$",
                    "description": "Description for the output file path",
                    "edam": "format_1476"
                }
            ]
        },
        "properties": {
            "type": "object",
            "properties": {
                "pdbid": {
                    "type": "string",
                    "default": "1aki",
                    "wf_prop": false,
                    "description": "ID of the protein."
                },
                "biounit": {
                    "type": "string",
                    "default": "False",
                    "wf_prop": false,
                    "description": "Allows downloading the (first) biological structure if selected."
                },
                "binary_path": {
                    "type": "string",
                    "default": "pdb_fetch",
                    "wf_prop": false,
                    "description": "Downloads a structure in PDB format from the RCSB website."
                },
                "remove_tmp": {
                    "type": "boolean",
                    "default": true,
                    "wf_prop": true,
                    "description": "Remove temporal files."
                },
                "restart": {
                    "type": "boolean",
                    "default": false,
                    "wf_prop": true,
                    "description": "Do not execute if output files exist."
                }
            }
        }
    },
    "additionalProperties": false
}